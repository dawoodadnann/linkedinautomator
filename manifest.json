{
  "manifest_version": 3,
  "name": "LinkedIn Keyword Search & Extractor",
  "version": "1.0",
  "description": "Automatically searches Google for LinkedIn posts and extracts results into a CSV file.",
  "permissions": ["activeTab", "scripting", "downloads", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Post Extractor"
  },
  "host_permissions": ["https://www.google.com/*", "https://*.google.com/*"]
}
